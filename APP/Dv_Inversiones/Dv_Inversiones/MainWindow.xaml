<Window x:Class="Dv_Inversiones.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dv_Inversiones"
        mc:Ignorable="d"
        Title="MainWindow" Height="525" Width="350" Padding="50">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Height="30" Width="300">
            <TextBox x:Name="txtIDFactura" Width="50" VerticalContentAlignment="Center" FontSize="12"></TextBox>
            <Button x:Name="btnBuscar" Content="Buscar" Width="50" Margin="20 0 0 0" Click="btnBuscar_Click"></Button>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Width="300">
            <Label x:Name="lCode"></Label>
            <Label x:Name="lName"></Label>
            <Label x:Name="ltotal"></Label>
        </StackPanel>
        <StackPanel Grid.Row="2" Width="300" Orientation="Horizontal">
            <Button x:Name="btnBeneratxt" Content="Generar .TXT" Width="120" Height="30" Click="btnBeneratxt_Click"></Button>
        </StackPanel>
        
    </Grid>
</Window>
